@model DataSets.Entity.Category
@{
    ViewData["Title"] = "Details Category";
    Layout = "~/Views/Shared/_AdminLTECustom.cshtml";
    const string imageStyle = "border-radius:3px; border: 1px solid gray;";
}

@section Title
{
    <br />
    <div class="row">
        <div class="col-sm-12 text-center">
            <h2 class="text-primary">Category Details </h2>
        </div>
    </div>
}

<div class="row p-3 border">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="col-8 pt-4">
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Name"></label>
            </div>
            <div class="col-8">
                <input disabled="disabled" asp-for="Name" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Products"></label>
            </div>
            <div class="col-8">
                <input disabled="disabled" asp-for="Products.Count" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label class="col-form-label">Last Sale</label>
            </div>
            <div class="col-8">
                @*@Html.DropDownListFor(m => m.Product.CategoryId, Model.CategoryList, "-Select a Category", new { @class = "form-control" })*@
                <input disabled="disabled" value="@DateTime.Now" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-8 offset-4">
                <div class="row">
                    <div class="col">
                        <a asp-action="Index" class="btn btn-success form-control">Back To List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-3 offset-1 pt-4">
        <img id="imageupload" src="~/Images/Products/noImage.png" width="100%" style="@imageStyle" alt="No Image" />
    </div>

</div>
