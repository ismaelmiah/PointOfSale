@model MonthDetailViewModel

@{
    Layout = "_AdminLTECustom";
    ViewData["Title"] = "Dashboard";
}

@section Title
{
    <br />
    <div class="row">
        <div class="col-sm-6">
            <h2 class="text-primary">Monthly Details</h2>
        </div>
        <div class="col-sm-6">
            <form asp-action="Result" asp-controller="Administration" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="col-12 row">
                    <div class="col-4">
                        <select class="form-control" asp-items="Html.GetEnumSelectList<Month>()" asp-for="Month"></select>
                        <span asp-validation-for="Month" class="text-danger"></span>
                    </div>
                    <div class="col-3 row">
                        <select class="form-control" asp-for="Year">
                            @for (int year = 2020; year < 2030; year++)
                            {
                                <option value="@year">@year</option>
                            }
                        </select>
                        <span asp-validation-for="Year" class="text-danger"></span>
                    </div>
                    <div class="col-4 row ml-4">
                        <button type="submit"
                                onclick="return validateInput()" class="btn btn-success form-control">
                            Search
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
}
<div class="p-4 border rounded">
    <table id="myTable" class="table table-striped table-bordered" style="width:100%">
        <thead class="thead-dark">
        <tr class="table-info">
            <th>Category Name</th>
            <th>Investment</th>
            <th>Profit</th>
            <th>Loss</th>
            <th>Balance</th>
            <th>Month</th>
        </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.MonthDetails)
            {
                <tr class="table-info">
                    <td>@item.Category.Name</td>
                    <td>@item.Invest</td>
                    <td>@item.Profit</td>
                    <td>@item.Loss</td>
                    <td>@item.Balance</td>
                    <td>@item.DateOfDetails.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts{
    <script type="text/javascript">
        $('#myTable').DataTable();
    </script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}