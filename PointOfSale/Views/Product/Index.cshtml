@model IEnumerable<DataSets.Entity.Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLTECustom.cshtml";
}

<br />
<div class="row">
    <div class="col-md-12 text-center">
        <h2 class="text-primary">Product List </h2>
    </div>
</div>

<br />
<div class="p-4 border rounded">
    <table id="myTable" class="table table-striped table-bordered" style="width:100%">
        <thead class="thead-dark">
        <tr class="table-info">
            <th>Name</th>
            <th>Description</th>
            <th>Category</th>
            <th>Buy Price</th>
            <th>Sale Price</th>
            <th>Stock Product</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr class="table-info">
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Category.Name</td>
                <td>@item.BuyPrice</td>
                <td>@item.SalePrice</td>
                <td></td>
                <td></td>
            </tr>
        }
        </tbody>
    </table>
</div>

@section Scripts
{
    <script>
        $(document).ready( function () {
            $('#myTable').DataTable();
        } );
    </script>
}
